<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Is_Status_Detail_Blank</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISBLANK(Status_Detail__c),
ISPICKVAL(Release_Item_Status__c,&quot;Ready for Deployment&quot;))</errorConditionFormula>
    <errorDisplayField>Status_Detail__c</errorDisplayField>
    <errorMessage>Add Pre Deployment Steps, Deployment Steps and Post Deployment Steps</errorMessage>
</ValidationRule>
