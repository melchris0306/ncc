<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Timezone_validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(OR(NOT(ISNULL(Start_Date_Time__c)),NOT(ISNULL(End_Date_Time__c))), ISBLANK(TEXT( Time_Zone__c )) )</errorConditionFormula>
    <errorDisplayField>Time_Zone__c</errorDisplayField>
    <errorMessage>Please select a timezone.</errorMessage>
</ValidationRule>
